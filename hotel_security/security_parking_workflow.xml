<?xml version="1.0"?>
<openerp>
<data>
	<record model="workflow" id="wkf_security_parking">
		<field name="name">hotel.security.parking.basic</field>
		<field name="osv">hotel.security.parking</field>
		<field name="on_create">True</field>
	</record>

		#----------------------------------------------
		# Activity
		#----------------------------------------------
		<record model="workflow.activity" id="act_draft">
			<field name="wkf_id" ref="wkf_security_parking"/>
			<field name="flow_start">True</field>
			<field name="name">draft</field>
		</record>
		<record model="workflow.activity" id="act_confirm">
			<field name="wkf_id" ref="wkf_security_parking"/>
			<field name="name">confirm</field>
			<field name="kind">function</field>
			<field name="action">parking_confirm()</field>
		</record>
		<record model="workflow.activity" id="act_void">
			<field name="wkf_id" ref="wkf_security_parking"/>
			<field name="name">void</field>
			<field name="flow_stop">True</field>
			<field name="kind">function</field>
			<field name="action">parking_void()</field>
		</record>
		
		<!--
		  Transition 
		 			  -->
		
		<record model="workflow.transition" id="t1">
			<field name="act_from" ref="act_draft" />
			<field name="act_to" ref="act_confirm" />
			<field name="signal">signal_confirm</field>
		</record>
		<record model="workflow.transition" id="t2">
			<field name="act_from" ref="act_confirm" />
			<field name="act_to" ref="act_void" />
			<field name="signal">signal_void</field>
		</record>
	
</data>
</openerp>